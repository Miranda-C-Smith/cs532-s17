<script type="text/javascript">
var MOBILE_EVENT_DOMAIN = "http://m.event.melon.com";
var MOBILE_MAIN_DOMAIN = "http://m.app.melon.com";

function goMainMenu(menuNum) {
	console.log("call goMainMenu " + (new Date()).getMilliseconds());
	
	var searchString = window.location.href;
	if(searchString.indexOf("/mobile4web/main_list.htm") != -1 || searchString.indexOf("melon.com/index.htm") != -1){
		$('body').removeClass('is_side_menu_open');
		setCookieMain('mainSlider', menuNum );
		slider[0].go_page(menuNum);
	}else{
		switch (menuNum) {
		  case 0    : setCookieMain('mainSlider', 0 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#0";
		        break;
		  case 1    : setCookieMain('mainSlider', 1 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#1";
		        break;
		  case 2    : setCookieMain('mainSlider', 2 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#2";
		        break;
		  case 3    : setCookieMain('mainSlider', 3 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#3";
	        	break;
		  case 4    : setCookieMain('mainSlider', 4 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#4";
          		break;          
		  case 5    : setCookieMain('mainSlider', 5 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#5";
          		break;
		  default   : setCookieMain('mainSlider', 6 );
		  			  window.location.href = MOBILE_MAIN_DOMAIN + "/index.htm#6";
		        break;
		}
	}
}

function goFamilyApp(familyAppName) {
	console.log("call goFamilyApp " + (new Date()).getMilliseconds());
	
	var searchString = window.location.href;
	if(searchString.indexOf("/mobile4web/main_list.htm") != -1 || searchString.indexOf("melon.com/index.htm") != -1){
		$('body').removeClass('is_side_menu_open');
		//setCookieMain('mainSlider', menuNum );
		//slider[0].go_page(menuNum);
	}
	
	var scheme 	= "";
	var linkUrl	= "";
	
	switch (familyAppName) {
	  case "ticket"	:
		  	scheme		= "melonticket://action";
	    	linkUrl		= "http://m.ticket.melon.com";
	        break;
	  case "shopping" :
			scheme 		= "melonshopping://action";
			linkUrl		= "http://m.store.melon.com/index.htm";
	        break;
	  case "aztalk"	:
		  	scheme		= "aztalkapp://openMain?memberKey=&osInfo=&originAppInfo=";
		  	linkUrl		= "http://aztalk.melon.com";			  	
	        break;
	  case "songroom" :
		  	scheme		=  (POC_ID == "IS20") ? "melonShowwing://exec?" : "showwing://root/" ;
			linkUrl		= "http://m.app.melon.com/serviceintro/showwing_guide.htm";
        	break;
	 default : 
	        break;
	}
	
	appLaunch( scheme, linkUrl, false, true );
}

function goEventMenu(menuNum) {
	
	var searchString = window.location.href;
	if(searchString.indexOf("/cds/promotion") != -1 || searchString.indexOf("melon.com/event/") != -1){
		$('body').removeClass('is_side_menu_open');
		setCookieMain('eventSlider', menuNum );
// 		slider[0].go_page(menuNum);
		switch (menuNum) {
		  case 0    : setCookieMain('eventSlider', menuNum );
		  			  window.location.href = MOBILE_EVENT_DOMAIN+"/event/index.htm?cpId="+POC_ID;
		        break;
		  case 1    : setCookieMain('eventSlider', menuNum );
			  		  window.location.href = MOBILE_EVENT_DOMAIN+"/event/my/index.htm?memberKey=" + getMemberKey()+"&cpId="+POC_ID;
		        break;
		}
	}else{
		switch (menuNum) {
		  case 0    : setCookieMain('eventSlider', menuNum );
		  			  window.location.href = MOBILE_EVENT_DOMAIN+"/event/index.htm?cpId="+POC_ID;
		        break;
		  case 1    : setCookieMain('eventSlider', menuNum );
			  		  window.location.href = MOBILE_EVENT_DOMAIN+"/event/my/index.htm?memberKey=" + getMemberKey()+"&cpId="+POC_ID;
		        break;
		}
	}
}

function goMusicstoryMenu(menuNum) {
    var searchString = window.location.href;
    setCookieMain('mstoryMainSlider', menuNum );
    if(searchString.indexOf("/musicstory") != -1){
        $('body').removeClass('is_side_menu_open');
        slider[0].go_page(menuNum);
    }else{
        window.location.href = MOBILE_MAIN_DOMAIN + "/musicstory/index.htm";
    }
}

function goMusicAwardMenu() {
	window.location.href = MOBILE_MAIN_DOMAIN + "/melonaward/timeline.htm";
}

//================ 히스토리백 구현관련 추가 ================
//쿠키 생성
function setCookieMain(cName, cValue){
	var ExpDate = new Date();
	ExpDate.setTime(ExpDate.getTime() + 1000*60*30);
    cookies = cName + '=' + escape(cValue) + '; path=/ '; // 한글 깨짐을 막기위해 escape(cValue)를 합니다.
	cookies += ';expires=' + ExpDate.toGMTString() + ';';
    document.cookie = cookies; 
}

//쿠키 가져오기
function getCookieMain(cName) {
    cName = cName + '=';
    var cookieData = document.cookie;
    var start = cookieData.indexOf(cName);
    var cValue = '';
    if(start != -1){
    	start += cName.length;
    	var end = cookieData.indexOf(';', start);
    	if(end == -1)end = cookieData.length;
    	cValue = cookieData.substring(start, end);
    }else{
		return 0;
	}
	return unescape(cValue);
}

//쿠키 삭제하기
function delCookieMain(cName){
	var ExpDate = new Date();
	ExpDate.setTime(ExpDate.getTime());
    cookies = cName + '=; path=/ '; // 한글 깨짐을 막기위해 escape(cValue)를 합니다.
	cookies += ';expires=' + ExpDate.toGMTString() + ';';
	document.cookie = cookies;
}

//로그인 공통
function loginSubmit(){
	var searchString = window.location.href;
	if(!isMelonLogin()) {
		if(searchString.indexOf("/cds/promotion") != -1 || searchString.indexOf("melon.com/event/index.htm") != -1){
			// 앱버전 검증
			try {
				if( appVerCompare(4,0,0) ){
				   	if(POC_ID == "AS40"){
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else if(POC_ID == "IS40") {
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else {
				   		location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				   	}
				}else{
					var curUrl = encodeURIComponent(document.location.href);
					location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				}
			} catch(e) {
				var currappVer = navigator.userAgent.toLowerCase();
				if(currappVer.indexOf(";") > -1 ){
					var tempNa = currappVer.split(";");
					if ( tempNa.length > 0 ) {
						currappVer = tempNa[tempNa.length -2];
						if (currappVer.indexOf("4.") > -1 ) {
							if(POC_ID == "AS40"){
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else if(POC_ID == "IS40") {
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else {
						   		location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						   	}
						}else{
							var curUrl = encodeURIComponent(document.location.href);
							location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						}
					}
				}
			}
			
		}else{
			if (POC_ID == "AS40"){
				window.melonapp.requestCommand('LoginNeed', '', '', '');
			}
			else if (POC_ID == "IS40")
			{
				location.href = "meloniphone://M4001";
			}else{
				$("#loginForm").attr("action", "/muid/login/mobile2/login_inform.htm").submit();
			}
		}
		return;
	}
}

function goMyProfile(){
	var searchString = window.location.href;
	if(!isMelonLogin()) {
		if(searchString.indexOf("/cds/promotion") != -1 || searchString.indexOf("melon.com/event/index.htm") != -1){
			
			// 앱버전 검증
			try {
				if( appVerCompare(4,0,0) ){
				   	if(POC_ID == "AS40"){
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else if(POC_ID == "IS40") {
				   		appLaunch('melonapp://setting/melonlogin','',false);
				   	} else {
				   		location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				   	}
				}else{
					var curUrl = encodeURIComponent(document.location.href);
					location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
				}
			} catch(e) {
				var currappVer = navigator.userAgent.toLowerCase();
				if(currappVer.indexOf(";") > -1 ){
					var tempNa = currappVer.split(";");
					if ( tempNa.length > 0 ) {
						currappVer = tempNa[tempNa.length -2];
						if (currappVer.indexOf("4.") > -1 ) {
							if(POC_ID == "AS40"){
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else if(POC_ID == "IS40") {
						   		appLaunch('melonapp://setting/melonlogin','',false);
						   	} else {
						   		location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						   	}
						}else{
							var curUrl = encodeURIComponent(document.location.href);
							location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
						}
					}
				}
			}
			
		}else{
			if (POC_ID == "AS40"){
				window.melonapp.requestCommand('LoginNeed', '', '', '');
			}
			else if (POC_ID == "IS40")
			{
				location.href = "meloniphone://M4001";
			}else{
				var curUrl = encodeURIComponent(document.location.href);
				location.href="https://member.melon.com/muid/mobile/login/login_inform.htm?returnPage="+ curUrl;
			}
		}
		return;
	}else{
		location.href="http://m.app.melon.com/commerce/mypage/myinfo/mobile2/myinfo_informMyInfoView.htm";
	}
}

