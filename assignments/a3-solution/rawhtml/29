            <div class="l-story__main">
        <aside class="promo-box--promo panel-pane pane-block pane-dfp-pri-ros-btf-300x250 ad-desktop" >
  
    
  
  <div id="dfp-ad-pri_ros_btf_300x250-wrapper" class="dfp-tag-wrapper">
<div  id="dfp-ad-pri_ros_btf_300x250" class="dfp-tag-wrapper">
    <script type="text/javascript">
