<script type="text/javascript">
(function(){
	var data = {
		'name':'開発会社を探す【発注ナビ】',
		'displayed':'非表示',
		'list':[

{'url':'http://www.atmarkit.co.jp/ait/articles/1607/19/news021.html','title':'いい開発会社 すぐ紹介します：外注先の選び方[第3]の選択肢','ngforum':'jibun,ljibun,lcareer,lskill','icon':'/ait/images/htmlgen/parts_hnavilisticon_1_1472121607.jpg'},
{'url':'http://www.atmarkit.co.jp/ait/articles/1607/19/news021.html','title':'データで読み解く「失敗しない開発会社選び」5つのポイント','ngforum':'jibun,ljibun,lcareer,lskill','icon':'/ait/images/htmlgen/parts_hnavilisticon_2_1472121546.jpg'},
{'url':'http://tr.adgocoo.com/cl/fak5g2oq','title':'「安い」「早い」「うまい」を叶えるシステム開発会社って？','ngforum':'jibun,ljibun,lcareer,lskill','icon':'/ait/images/htmlgen/parts_hnavilisticon_3_1464930555.jpg'},
// data

		{}
		]
	};
	var list = data.list;
	if(list.length <=1) return false;
	var hnaviList = document.getElementById('hnaviList');
	if(!hnaviList) return false;
	var html = '';
	var listhtml = '';
	var extraid = '';
	var count = data.displayed;
	var listcount = 1;
	if(getMETA('extraid')){
		extraid = getMETA('extraid').getAttribute('content').split('\t');
	}
	for (var i=list.length-2;i>=0;i--) {
		var listshuffle = Math.floor((i+1)*Math.random());
		var liststorage = list[i];
		list[i] = list[listshuffle];
		list[listshuffle] = liststorage;
	}
	for(var i=0;i<count;i++) {
		if(i+1 > list.length-1) break;
		if((list[i]['ngforum'])&&(extraid)) {
			var extraidcheck = '';
			var ngforumcheck = -1;
			var ngforum = list[i]['ngforum'].split(',')
			for(var j=0;j<ngforum.length;j++) {
				extraidcheck = 'kw-' + ngforum[j];
				ngforumcheck = jQuery.inArray(extraidcheck, extraid);
				if(ngforumcheck > -1) break;
			}
		}
		if(ngforumcheck > -1) {
			count++;
			ngforumcheck = -1;
		} else {
			listhtml += '<div class="colBoxIndex listnum' + i + '">\n';
			if(list[i]['icon']) {
				listhtml += '<div class="colBoxIcon"><a href="' + list[i]['url'] + '" target="_blank"><img src="' + imgSrv() + list[i]['icon'] + '" style="width:60px;height:45px;"></a></div>\n';
			}
			listhtml += '<div class="colBoxTitle"><p><a href="' + list[i]['url'] + '" target="_blank">' + list[i]['title'] + '</a></p></div>\n';
			listhtml += '<div class="colBoxClear"></div>\n';
			listhtml += '</div>\n';
			listcount++;
		}
	}
	if(!listhtml) return false;
	html += '<div class="colBox colBoxhnavi"><div class="colBoxOuter">';
	html += '<div class="colBoxHead"><p>' + data['name'] + '</p>';
	html += '<span class="colBoxHeadSubtxt">- PR -</span></div>';
	html += '<div class="colBoxInner">';
	html += listhtml;
	html += '</div>';
	html += '</div></div>';
	html += '<div class="colBoxClear h10px"></div>';
	hnaviList.innerHTML = html;
})();
</script>
