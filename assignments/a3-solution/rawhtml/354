	if(!id) return false;
	var abtestflag_a = cx_ab_flag('itm\_(a|A|e|i|m|w|X)');
	var abtestflag_b = cx_ab_flag('itm\_(b|B|f|j|n|x|Y)');
	var abtestflag_c = cx_ab_flag('itm\_(c|C|g|k|o|y|W)');
	var abtestflag_d = cx_ab_flag('itm\_(d|D|h|l|p|z|Z)');
	var abtestpos = 'rm45256';

	if(abtestflag_a){jQuery('#colBoxArticleRanking').addClass('rm45256_a');}
	else if(abtestflag_b){jQuery('#colBoxArticleRanking').addClass('rm45256_b');}
	else if(abtestflag_c){jQuery('#colBoxArticleRanking').addClass('rm45256_c');}
	else if(abtestflag_d){jQuery('#colBoxArticleRanking').addClass('rm45256_d');}
