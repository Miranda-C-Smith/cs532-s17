<script defer>
(function(){
	var data = {
		'name':'注目のテーマ',
		'list':[
				{'url':'http://www.atmarkit.co.jp/ait/subtop/features/coding/soe.html','img':'/ait/images/htmlgen/rc_teemasitebanner_1_1485519674.jpg','forum':'top,databaseexpert,linuxandoss,javaagile'},
				{'url':'/ait/subtop/features/systemdesign/iot_catalog.html','img':'/ait/images/htmlgen/rc_teemasitebanner_1_1480931707.jpg','forum':'top,smartandsocial,designhack,html5plusux,serverandstorage,windowsserverinsider,businessappinsider,insiderdotnet,systeminsider,railshub,codingedge,javaagile,databaseexpert,linuxandoss,masterofipnetwork,securityandtrust,systemdesign,testandtools'},
				{'url':'/ait/subtop/features/kwd/auto.html','img':'/ait/images/htmlgen/rc_teemasitebanner_8_1480558496.jpg','forum':'top,systemdesign,serverandstorage,masterofipnetwork'},
				{'url':'/ait/subtop/features/systemdesign/engineer.html','img':'/ait/articles/1609/16/hu_300ai.jpg','forum':'top,systemdesign,linuxandoss,javaagile'},
				{'url':'/ait/subtop/features/jibun/uistyle.html','img':'/ait/images/htmlgen/rc_teemasitebanner_1_1467346196.jpg','forum':'top,ljibun,lcareer,lskill,jibun'},
		{}
		]
	};
	var list = data.list;
	if(list.length <=1) return false;
	var bannerList = document.getElementById('teemasiteBanner');
	if(!bannerList) return false;
	var html = '';
	var listhtml = '';
	var extraid = '';
	var adpath = '';
	if(getMETA('extraid')){
		extraid = getMETA('extraid').getAttribute('content');
	} else {
		extraid = '	at-news	ao-db	kw-databaseexpert	';
	}
	if(getMETA('adpath')){
		adpath = getMETA('adpath').getAttribute('content');
	}
	for(var i=0;i<list.length-1;i++) {
		if(!list[i]['forum']) continue;
		var forumtest = list[i]['forum'].split(',');
		for(var j=0;j<forumtest.length;j++) {
			if(!forumtest[j]) continue;
			if((forumtest[j] == 'top') && (adpath == 'root/ITmedia/ait/top')) {
				listhtml += '<div class="colBoxIndex"><div class="colBoxBanner"><a href="' + list[i]['url'] + '"><img src="' + imgSrv() + list[i]['img'] + '"></a></div></div>\n';
			} else if(!extraid) {
				continue;
			} else if(extraid.match('kw-' + forumtest[j])) {
				listhtml += '<div class="colBoxIndex"><div class="colBoxBanner"><a href="' + list[i]['url'] + '"><img src="' + imgSrv() + list[i]['img'] + '"></a></div></div>\n';
				break;
			} else {
				continue;
			}
		}
	}
	if(!listhtml) return false;
	html += '<div class="colBox colBoxteemasitebanner"><div class="colBoxOuter">';
	html += '<div class="colBoxHead"><p>' + data['name'] + '</p></div>';
	html += '<div class="colBoxInner">';
	html += listhtml;
	html += '</div>';
	html += '</div></div>';
	html += '<div class="colBoxClear"></div>';
	bannerList.innerHTML = html;
})();
</script>
