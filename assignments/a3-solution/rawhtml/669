        <script type="text/javascript">
            window.addEventListener('popstate', function(e) {
                $('.js-teacher-registration-modal').hide();
                $('.js-teacher-login-modal').hide();
                $('.js-password-request-modal').hide();
                $('.js-password-update-modal').hide();
                var action = QueryString().action ? QueryString().action : null;
                if(action == 'login'){
                    $('.js-teacher-login-modal').show();
                }else if(action == 'registration'){
                    $('.js-teacher-registration-modal').show();
                }else if(action == 'password'){
                    $('.js-password-request-modal').show();
                }else if(action == 'password-update'){
                    $('.js-password-update-modal').show();
                }
            });

            $(document).on('data-toggle-display-hidden', function(){
                history.pushState(null, null, 'https://spiral.ac/r/t_thing2_m646');
            });

            $(document).on('data-toggle-display-shown', function(e, selector, target){
                if(selector == '.js-teacher-login-modal'){
                    history.pushState(null, null, 'https://spiral.ac/r/t_thing2_m646?action=login');
                }else if(selector == '.js-teacher-registration-modal'){
                    history.pushState(null, null, 'https://spiral.ac/r/t_thing2_m646?action=registration');
                }else if(selector == '.js-password-request-modal'){
                    history.pushState(null, null, 'https://spiral.ac/r/t_thing2_m646?action=password');
                }else if(selector == '.js-password-update-modal'){
                    history.pushState(null, null, 'https://spiral.ac/r/t_thing2_m646?action=password-update');
                }
            });
        </script>
            
    <script src="https://spiral.ac/assets/lightGallery/js/lightgallery-all.min.js"></script>


    <script type="text/javascript">
        var AppCarousel = function () {
            var current_app = 'quickfire';
            var apps = ['quickfire', 'discuss', 'team-up', 'clip'];
            var timer = null;
            var changeApp = function () {
                $('.js-apps-selector').removeClass('color-dove-grey');
                $('.js-apps-selector[data-app="' + current_app + '"]').addClass('color-dove-grey');
                $('.js-apps-preview').hide();
                $('.js-apps-preview[data-app="' + current_app + '"]').show();
                $('.js-apps-title .js-idle').show();
                $('.js-apps-title .js-selected').hide();
                $('.js-apps-title[data-app="' + current_app + '"] .js-idle').hide();
                $('.js-apps-title[data-app="' + current_app + '"] .js-selected').show();
            };

            var nextApp = function () {
                var key = 0;
                for (var i = 0; i < apps.length; i++)
                    if (apps[i] === current_app)
                        key = i;
                current_app = apps[(key + 1 >= apps.length ? 0 : key + 1)];
                changeApp();
            };

            var setTimer = function () {
                clearInterval(timer);
                timer = setInterval(nextApp, 5000);
            };

            $(document).on('click', '.js-apps-selector, .js-apps-title', function (e) {
                e.preventDefault();
                setTimer();
                current_app = $(this).attr('data-app');
                changeApp();
            });
            changeApp();
            setTimer();
        };

        AppCarousel();

        var headerWatcher = function () {
            var header = $('.js-header');
            var navbar = $('.js-navbar');
            var default_logo = $('.js-logo');
            var white_logo = $('.js-logo-white');
            var watch = function () {
                if ($(window).scrollTop() + navbar.outerHeight() > header.height()) {
                    navbar.addClass('bg-white');
                    default_logo.show();
                    white_logo.hide();
                } else {
                    navbar.removeClass('bg-white');
                    default_logo.hide();
                    white_logo.show();
                }
            };

            $(window).on('scroll', function () {
                watch();
            });

            watch();
        };

        headerWatcher();


        var joinControls = function () {
            $(document).on('click', '.js-join-control, .js-join-control-navbar', function(e){
                e.preventDefault();
                $("html, body").animate({ scrollTop: "0" }, 250, function() {
                    showLogins();
                });
            });

            function showLogins(){
                $('.js-join-control').hide();
                $('.grow').addClass('active');
            }

            function hideLogins(){
                $('.js-join-control').show();
                $('.grow').removeClass('active');
            }

            $(document).on('scroll', function(){
                if($('body').scrollTop() > $('.js-join-control-wrapper').offset().top + $('.js-join-control-wrapper').height()){
                    $('.js-join-control-navbar').show();
                    hideLogins();
                }else{
                    $('.js-join-control-navbar').hide();
                }
            });
        };

        joinControls();
    </script>

