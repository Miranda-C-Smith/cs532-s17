<script>
	jQuery( document ).ready(function( $ ) {
		// Funzione per AD su mobile
		function singleAdMobile() {
			var postContainer = $('div.type-post > div.post-detail > div.detail div#theContent');
			var postWordShowAd = '200';
			var adContainer	= "";
			var postContent = postContainer.text();
			var postWordCount = postContent.replace( /[^\w ]/g, "" ).split( /\s+/ ).length;
			var postAdToShow = Math.floor(postWordCount/postWordShowAd);
			for (var i = 1; i <= postAdToShow; i++) {
				if ( i === 1 ) {
					adContainer = 
					'<!-- /111779345/sardiniapost_homepage_sidebar_mobile_01 -->' + 
						'<div id="div-gpt-ad-1462224363022-13">' + 
					'</div>'
					var postAdPosition = postWordShowAd * i;
					var html = $(postContainer).html().split(" ");			
					html = html.slice(0, postAdPosition).join(" ") + '</p>' + adContainer + '<p>' + html.slice(postAdPosition).join(" ");
					$(postContainer).html(html);					
					
				} else if ( i === 2 ) {
					adContainer = 
					'<!-- /111779345/sardiniapost_homepage_sidebar_mobile_02 -->' + 
						'<div id="div-gpt-ad-1462224363022-14">' + 
					'</div>'
					var postAdPosition = postWordShowAd * i;
					var html = $(postContainer).html().split(" ");			
					html = html.slice(0, postAdPosition).join(" ") + '</p>' + adContainer + '<p>' + html.slice(postAdPosition).join(" ");
					$(postContainer).html(html);
				} else {
				}
			}	
		}
		if ( (WURFL.is_mobile) && (WURFL.form_factor === 'Smartphone') ) {		
			singleAdMobile();
			var dfps = document.createElement("script");
			dfps.type = "text/javascript";
			dfps.innerHTML = "googletag.cmd.push(function() { googletag.display('div-gpt-ad-1462224363022-13'); });"
			$("#div-gpt-ad-1462224363022-13").append(dfps);

			var dfps1 = document.createElement("script");
			dfps1.type = "text/javascript";
			dfps1.innerHTML = "googletag.cmd.push(function() { googletag.display('div-gpt-ad-1462224363022-14'); });"
			$("#div-gpt-ad-1462224363022-14").append(dfps1);
		}
    });
</script>  		
